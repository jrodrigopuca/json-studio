{
  "manifest_version": 3,
  "name": "JSON Spark",
  "version": "2.0.0",
  "description": "The JSON tool you can trust. Fast, beautiful, private.",
  "homepage_url": "https://github.com/jrodrigopuca/json-studio",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["activeTab", "clipboardWrite", "contextMenus"],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/detector.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon-48.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["viewer/*", "chunks/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
